<!-- index.html -->
<!DOCTYPE html>
<html>
  <head>
    <title>File Transfer App</title>
    <link rel="stylesheet" type="text/css" href="/css/style.css" />
  </head>
  <body>
    <div class="container">
      <h1>File Transfer App</h1>
      <form enctype="multipart/form-data" id="upload-form">
        <input type="file" name="files" multiple id="file-input" />
        <button type="submit" id="submit-button">Upload</button>
      </form>
      <table id="file-list">
        <thead>
          <tr>
            <th>Filename</th>
            <th>Download</th>
          </tr>
        </thead>
        <tbody></tbody>
      </table>

      <table id="filesTable">
        <thead>
          <tr>
            <th>Name</th>
            <th>Preview</th>
            <th>Size</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <!-- File rows will be added here dynamically -->
        </tbody>
      </table>
    </div>
    <script src="/js/main.js"></script>
  </body>
</html>
